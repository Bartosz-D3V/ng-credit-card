{
  "name": "ng-payment-card-app",
  "version": "0.0.1",
  "scripts": {
    "ng": "ng",
    "prestart": "npm run build-lib:prod",
    "start": "ng serve",
    "build": "ng build",
    "pretest": "npm run lint",
    "test": "ng test",
    "prelint": "npm run stylelint",
    "lint": "ng lint",
    "pree2e": "webdriver-manager update --gecko=false",
    "e2e": "ng e2e",
    "pretty": "prettier --write **/*.{js,ts,scss,json,yml,md}",
    "stylelint": "stylelint --config ./.stylelintrc --syntax scss --color **/*.scss",
    "lint-staged": "lint-staged --config .lintstagedrc",
    "compodoc": "compodoc -p projects/ng-payment-card/tsconfig.lib.json -a ./docs/ --theme stripe --hideGenerator",
    "build-app:prod": "ng build ng-payment-card-app --prod --build-optimizer --aot --extract-licenses=false",
    "build-lib:prod": "ng build ng-payment-card --prod",
    "postbuild-lib:prod": "cp -r README.md CODE_OF_CONDUCT.md LICENSE docs dist/ng-payment-card/",
    "clean": "rm -r dist/ coverage/ || exit 0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Bartosz-D3V/ng-payment-card.git"
  },
  "dependencies": {
    "@angular/animations": "7.0.3",
    "@angular/common": "7.0.3",
    "@angular/compiler": "7.0.3",
    "@angular/core": "7.0.3",
    "@angular/forms": "7.0.3",
    "@angular/http": "7.0.3",
    "@angular/platform-browser": "7.0.3",
    "@angular/platform-browser-dynamic": "7.0.3",
    "@angular/router": "7.0.3",
    "core-js": "2.5.7",
    "rxjs": "6.3.3",
    "zone.js": "0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "0.10.5",
    "@angular-devkit/build-ng-packagr": "0.10.5",
    "@angular/cli": "7.0.5",
    "@angular/compiler-cli": "7.0.3",
    "@angular/language-service": "7.0.3",
    "@compodoc/compodoc": "1.1.6",
    "@types/jasmine": "2.8.11",
    "@types/jasminewd2": "2.0.6",
    "@types/node": "8.10.30",
    "codelyzer": "4.5.0",
    "husky": "1.1.3",
    "jasmine-core": "3.3.0",
    "jasmine-spec-reporter": "4.2.1",
    "karma": "3.1.1",
    "karma-chrome-launcher": "2.2.0",
    "karma-coverage-istanbul-reporter": "2.0.4",
    "karma-jasmine": "1.1.2",
    "karma-jasmine-html-reporter": "1.4.0",
    "lint-staged": "8.0.4",
    "ng-packagr": "4.4.0",
    "prettier": "1.15.1",
    "protractor": "5.4.1",
    "stylelint": "9.7.1",
    "stylelint-order": "1.0.0",
    "stylelint-scss": "3.4.0",
    "ts-node": "7.0.1",
    "tsickle": "0.33.1",
    "tslib": "1.9.3",
    "tslint": "5.11.0",
    "typescript": "3.1.6"
  }
}
