{
  "name": "ng-payment-card-app",
  "version": "0.0.1",
  "scripts": {
    "ng": "ng",
    "prestart": "npm run dist-lib",
    "start": "ng serve",
    "build": "ng build",
    "pretest": "npm run lint",
    "test": "ng test",
    "prelint": "npm run stylelint",
    "lint": "ng lint",
    "pree2e": "webdriver-manager update --gecko=false",
    "e2e": "ng e2e",
    "pretty": "prettier --write **/*.{js,ts,scss}",
    "stylelint": "stylelint --config ./.stylelintrc --syntax scss --color **/*.scss",
    "lint-staged": "lint-staged --config .lintstagedrc",
    "compodoc": "compodoc -p projects/ng-payment-card/tsconfig.lib.json -a ./docs/ --theme stripe --hideGenerator",
    "dist-app": "ng build ng-payment-card-app --prod --build-optimizer --aot --extract-licenses=false",
    "dist-lib": "ng build ng-payment-card --prod",
    "postdist-lib": "cp -r README.md CODE_OF_CONDUCT.md LICENSE docs dist/ng-payment-card/",
    "clean": "rm -r dist/ coverage/ || exit 0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Bartosz-D3V/ng-payment-card.git"
  },
  "dependencies": {
    "@angular/animations": "6.1.3",
    "@angular/common": "6.1.3",
    "@angular/compiler": "6.1.3",
    "@angular/core": "6.1.3",
    "@angular/forms": "6.1.3",
    "@angular/http": "6.1.3",
    "@angular/platform-browser": "6.1.3",
    "@angular/platform-browser-dynamic": "6.1.3",
    "@angular/router": "6.1.3",
    "core-js": "2.5.7",
    "rxjs": "6.2.2",
    "zone.js": "0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "0.7.4",
    "@angular-devkit/build-ng-packagr": "0.7.4",
    "@angular/cli": "6.1.4",
    "@angular/compiler-cli": "6.1.3",
    "@angular/language-service": "6.1.3",
    "@compodoc/compodoc": "1.1.3",
    "@types/jasmine": "2.8.8",
    "@types/jasminewd2": "2.0.3",
    "@types/node": "8.10.26",
    "codelyzer": "4.4.4",
    "husky": "1.0.0-rc.13",
    "jasmine-core": "3.2.1",
    "jasmine-spec-reporter": "4.2.1",
    "karma": "3.0.0",
    "karma-chrome-launcher": "2.2.0",
    "karma-coverage-istanbul-reporter": "2.0.1",
    "karma-jasmine": "1.1.2",
    "karma-jasmine-html-reporter": "1.3.0",
    "lint-staged": "7.2.2",
    "ng-packagr": "4.1.0",
    "prettier": "1.14.2",
    "protractor": "5.3.2",
    "stylelint": "9.4.0",
    "stylelint-order": "1.0.0",
    "stylelint-scss": "3.3.0",
    "ts-node": "7.0.1",
    "tsickle": "0.32.1",
    "tslib": "1.9.3",
    "tslint": "5.11.0",
    "typescript": "2.9.2"
  }
}
